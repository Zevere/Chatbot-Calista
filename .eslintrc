{
    "parser": "babel-eslint",
    "parserOptions": {
        "parser": "babel-eslint",
        "ecmaVersion": 2018,
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "plugins": [
        "babel"
    ],
    "env": {
        "browser": false,
        "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "strict": "error",
        "quotes": [2, "single", { "avoidEscape": true }],
        "arrow-spacing": ["error", { "before" : true, "after": true }]
    }
}